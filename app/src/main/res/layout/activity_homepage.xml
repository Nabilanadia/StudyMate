<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#D6EAF8"
    tools:context=".Homepage">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo" />

    <!-- App Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📚 StudyMate"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="24dp" />

    <!-- Map Page Button -->
    <Button
        android:id="@+id/btnMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🗺️ Map Page"
        android:backgroundTint="#A0D8EF"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false" />

    <!-- Camera Page Button -->
    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📷 Camera Page"
        android:backgroundTint="#E6CCF5"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false" />

    <!-- Reminder Page Button -->
    <Button
        android:id="@+id/btnReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⏰ Reminder Page"
        android:backgroundTint="#FFE0B2"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false" />

    <!-- Profile Page Button -->
    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 Profile Page"
        android:backgroundTint="#C8E6C9"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚪 Logout"
        android:backgroundTint="#FFCDD2"
        android:textColor="#000000"
        android:textAllCaps="false" />

</LinearLayout>
